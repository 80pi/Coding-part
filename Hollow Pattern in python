n=int(input("enter number"))
t=n
m=n*2
for i in range(1,n+1):
    if(i==1): 
        s=str("*"*n) 
        print(s.rjust(m," "))
    if(i==n):
        s=str("*"*n) 
        print(s)
    else:
        s=str('*')
        print(s.rjust(t," "),end="")
        print(s.rjust(n-1," "))
        t-=1
print("\n")
